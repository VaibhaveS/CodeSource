function updateEvents(selectedType) {
  fetch(`/update-events?type=${selectedType}`)
    .then(response => response.text())
    .then(html => {
      document.getElementById("event-container").innerHTML = html;
      localStorage.setItem('selectedType', selectedType);
    })
    .catch(error => console.error(error));
}






document.getElementById('event-type-filter').addEventListener('change', function() {
    var selectedType = this.value.toLowerCase();
    updateEvents(selectedType);
});

